<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Material" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#5d4037</item>
        <item name="colorPrimaryDark">#3e2723</item>
        <item name="colorAccent">#42a5f5</item>
        <item name="android:listViewStyle">@style/MyListViewStyleAppCompat</item>
        <item name="android:windowBackground">@color/kinda_yellow</item>
        <item name="android:textColorPrimary">@android:color/background_dark</item>
        <item name="android:textColorSecondary">@android:color/background_dark</item>
    </style>

    <style name="MyListViewStyleAppCompat" parent="android:Widget.Holo.Light.ListView">
        <item name="android:listSelector">@drawable/activated_background_light</item>
    </style>

    <color name="kinda_yellow">#fff9c4</color>

    <style name="Theme.Toolbar" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">#5d4037</item>
        <item name="colorPrimaryDark">#3e2723</item>
        <item name="colorAccent">#42a5f5</item>
        <item name="android:windowBackground">@color/kinda_yellow</item>
    </style>

    <style name="PopupMenu" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu"></style>

</resources>